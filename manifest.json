{
  "manifest_version": 3,
  "name": "PhoneDork",
  "short_name": "PhoneDork",
  "version": "0.0.3",
  "description": "Highlight a phone number, right-click, and execute a search.",
  "icons": {
    "16": "images/gg-icon.png",
    "48": "images/gg-icon.png",
    "128": "images/gg-icon.png"
  },
  "author": "OSU Cascades on behalf of Guardian Group",

  "browser_action": {
    "default_icon": "images/gg-icon.png",
    "default_popup": "browser-action.html",
    "default_title": "Guardian Group PhoneDork"
  },

  "background": {
    "scripts": ["js/phone-parser.js", "js/phonedork.js"]
  },

  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },

  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ]

}
